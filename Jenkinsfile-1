pipeline {
  // agent {
  //   label 'OSX'
  // }

  agent any

   environment {
    CONVERTED_PROXY_URL = ''
  }

  stages {
    // stage('loging env all by sorting') {
    //   steps {
    //     sh 'env | sort'
    //   }
    // }

    stage('echo env.BUILD_URL') {
      steps {
        echo 'BUILD_URL : ${env.BUILD_URL}'
      }
    }

    stage('run groovy script to log env.BUILD_URL') {
      steps {
        script {
          def url_parser = load 'url_parser.groovy'
          def newUrl = url_parser.replaceBaseUrl()
          echo "NEW URL : ${newUrl}"
        }
      }
    }
  }
  post {
    always {
      steps {
        echo 'This will always run ${CONVERTED_PROXY_URL}'
      }
    }
  }
}
